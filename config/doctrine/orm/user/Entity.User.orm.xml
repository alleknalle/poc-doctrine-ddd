<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:noNamespaceSchemaLocation="https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\User\Entity\User"
            repository-class="App\Infrastructure\Doctrine\User\Repository\UserRepository">
        <embedded name="userId" class="App\Domain\Shared\ValueObject\UserId" use-column-prefix="false"/>
        <embedded name="username" class="App\Domain\User\ValueObject\Username" use-column-prefix="false"/>
        <embedded name="fullName" class="App\Domain\User\ValueObject\FullName" use-column-prefix="false"/>
        <embedded name="address" class="App\Domain\User\ValueObject\Address" use-column-prefix="false"/>
        <field name="active" column="active" type="boolean"/>
        <many-to-one field="userGroup" target-entity="App\Domain\User\Entity\UserGroup">
            <join-column name="user_group_id" referenced-column-name="user_group_id"/>
        </many-to-one>
    </entity>

</doctrine-mapping>